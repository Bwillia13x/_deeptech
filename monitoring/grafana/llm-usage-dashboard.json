{
    "dashboard": {
        "title": "Signal Harvester - LLM Usage & Costs",
        "tags": [
            "signal-harvester",
            "llm",
            "costs"
        ],
        "timezone": "browser",
        "schemaVersion": 36,
        "version": 1,
        "refresh": "1m",
        "time": {
            "from": "now-24h",
            "to": "now"
        },
        "panels": [
            {
                "id": 1,
                "title": "LLM Requests by Provider",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "sum(rate(llm_requests_total[1h])) by (provider)",
                        "legendFormat": "{{provider}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Requests/hour"
                    },
                    {
                        "format": "short"
                    }
                ],
                "stack": true
            },
            {
                "id": 2,
                "title": "LLM Request Duration by Provider",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(llm_request_duration_seconds_bucket[5m])) by (le, provider))",
                        "legendFormat": "{{provider}} (p95)",
                        "refId": "A"
                    },
                    {
                        "expr": "histogram_quantile(0.50, sum(rate(llm_request_duration_seconds_bucket[5m])) by (le, provider))",
                        "legendFormat": "{{provider}} (p50)",
                        "refId": "B"
                    }
                ],
                "yaxes": [
                    {
                        "format": "s",
                        "label": "Duration"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 3,
                "title": "Token Usage by Provider",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "sum(rate(llm_tokens_total[1h])) by (provider, token_type)",
                        "legendFormat": "{{provider}} - {{token_type}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Tokens/hour"
                    },
                    {
                        "format": "short"
                    }
                ],
                "stack": true
            },
            {
                "id": 4,
                "title": "Model Usage Distribution",
                "type": "piechart",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "sum(increase(llm_requests_total[24h])) by (model)",
                        "legendFormat": "{{model}}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "legend": {
                        "displayMode": "table",
                        "placement": "right",
                        "values": [
                            "value",
                            "percent"
                        ]
                    },
                    "pieType": "donut"
                }
            },
            {
                "id": 5,
                "title": "LLM Error Rate",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                },
                "targets": [
                    {
                        "expr": "sum(rate(llm_requests_total{status=\"error\"}[5m])) by (provider) / sum(rate(llm_requests_total[5m])) by (provider) * 100",
                        "legendFormat": "{{provider}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "percent",
                        "label": "Error %",
                        "max": 100,
                        "min": 0
                    },
                    {
                        "format": "short"
                    }
                ],
                "thresholds": [
                    {
                        "value": 5,
                        "colorMode": "critical",
                        "op": "gt",
                        "fill": true,
                        "line": true,
                        "yaxis": "left"
                    }
                ],
                "alert": {
                    "conditions": [
                        {
                            "evaluator": {
                                "params": [
                                    5
                                ],
                                "type": "gt"
                            },
                            "operator": {
                                "type": "and"
                            },
                            "query": {
                                "params": [
                                    "A",
                                    "5m",
                                    "now"
                                ]
                            },
                            "reducer": {
                                "params": [],
                                "type": "avg"
                            },
                            "type": "query"
                        }
                    ],
                    "frequency": "1m",
                    "handler": 1,
                    "name": "High LLM Error Rate",
                    "noDataState": "no_data"
                }
            },
            {
                "id": 6,
                "title": "Estimated Hourly Cost (OpenAI)",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                },
                "targets": [
                    {
                        "expr": "(sum(rate(llm_tokens_total{provider=\"openai\",token_type=\"prompt\"}[1h])) * 0.0015 / 1000) + (sum(rate(llm_tokens_total{provider=\"openai\",token_type=\"completion\"}[1h])) * 0.002 / 1000)",
                        "legendFormat": "GPT-4 Estimated Cost/hour",
                        "refId": "A"
                    },
                    {
                        "expr": "(sum(rate(llm_tokens_total{provider=\"openai\",token_type=\"prompt\",model=~\".*3.5.*\"}[1h])) * 0.0005 / 1000) + (sum(rate(llm_tokens_total{provider=\"openai\",token_type=\"completion\",model=~\".*3.5.*\"}[1h])) * 0.0015 / 1000)",
                        "legendFormat": "GPT-3.5 Estimated Cost/hour",
                        "refId": "B"
                    }
                ],
                "yaxes": [
                    {
                        "format": "currencyUSD",
                        "label": "Cost/hour"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "id": 7,
                "title": "Total Requests (24h)",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 0,
                    "y": 24
                },
                "targets": [
                    {
                        "expr": "sum(increase(llm_requests_total[24h]))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "decimals": 0
                    }
                },
                "options": {
                    "graphMode": "area",
                    "colorMode": "value"
                }
            },
            {
                "id": 8,
                "title": "Total Tokens (24h)",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 6,
                    "y": 24
                },
                "targets": [
                    {
                        "expr": "sum(increase(llm_tokens_total[24h]))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "decimals": 0,
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "green",
                                    "value": null
                                },
                                {
                                    "color": "yellow",
                                    "value": 1000000
                                },
                                {
                                    "color": "red",
                                    "value": 10000000
                                }
                            ]
                        }
                    }
                },
                "options": {
                    "graphMode": "area",
                    "colorMode": "background"
                }
            },
            {
                "id": 9,
                "title": "Average Response Time",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 12,
                    "y": 24
                },
                "targets": [
                    {
                        "expr": "histogram_quantile(0.50, sum(rate(llm_request_duration_seconds_bucket[1h])) by (le))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "decimals": 2,
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "green",
                                    "value": null
                                },
                                {
                                    "color": "yellow",
                                    "value": 10
                                },
                                {
                                    "color": "red",
                                    "value": 30
                                }
                            ]
                        }
                    }
                },
                "options": {
                    "graphMode": "area",
                    "colorMode": "background"
                }
            },
            {
                "id": 10,
                "title": "Estimated Daily Cost",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 18,
                    "y": 24
                },
                "targets": [
                    {
                        "expr": "((sum(increase(llm_tokens_total{provider=\"openai\",token_type=\"prompt\"}[24h])) * 0.0015 / 1000) + (sum(increase(llm_tokens_total{provider=\"openai\",token_type=\"completion\"}[24h])) * 0.002 / 1000)) + ((sum(increase(llm_tokens_total{provider=\"anthropic\",token_type=\"prompt\"}[24h])) * 0.008 / 1000) + (sum(increase(llm_tokens_total{provider=\"anthropic\",token_type=\"completion\"}[24h])) * 0.024 / 1000))",
                        "refId": "A"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "currencyUSD",
                        "decimals": 2,
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "green",
                                    "value": null
                                },
                                {
                                    "color": "yellow",
                                    "value": 50
                                },
                                {
                                    "color": "red",
                                    "value": 100
                                }
                            ]
                        }
                    }
                },
                "options": {
                    "graphMode": "area",
                    "colorMode": "background"
                }
            },
            {
                "id": 11,
                "title": "Request Success Rate by Provider",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 28
                },
                "targets": [
                    {
                        "expr": "sum(rate(llm_requests_total{status=\"success\"}[5m])) by (provider) / sum(rate(llm_requests_total[5m])) by (provider) * 100",
                        "legendFormat": "{{provider}}",
                        "refId": "A"
                    }
                ],
                "yaxes": [
                    {
                        "format": "percent",
                        "label": "Success %",
                        "max": 100,
                        "min": 0
                    },
                    {
                        "format": "short"
                    }
                ]
            }
        ]
    }
}