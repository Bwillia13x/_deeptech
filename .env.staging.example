# Copy this file to .env.staging and replace values with staging secrets
POSTGRES_DB=signal_harvester
POSTGRES_USER=harvest
POSTGRES_PASSWORD=change_me
DB_PASSWORD=change_me
DATABASE_URL=postgresql://harvest:change_me@db:5432/signal_harvester
# For local validation, set DATABASE_URL=sqlite:////app/var/staging.db
API_HOST=api.staging.signalharvester.io
GRAFANA_HOST=grafana.staging.signalharvester.io
PROMETHEUS_HOST=prometheus.staging.signalharvester.io
ALERTMANAGER_HOST=alerts.staging.signalharvester.io
TLS_EMAIL=ops@example.com
TLS_CERT_MODE=ops@example.com  # set to "internal" for local rehearsals
ACME_CA=https://acme-v02.api.letsencrypt.org/directory
GRAFANA_BASIC_AUTH_USER=admin
GRAFANA_BASIC_AUTH_HASH=$$2y$$12$$paste_bcrypt_hash_here
PROMETHEUS_BASIC_AUTH_USER=metrics
PROMETHEUS_BASIC_AUTH_HASH=$$2y$$12$$paste_bcrypt_hash_here
ALERTMANAGER_BASIC_AUTH_USER=alerts
ALERTMANAGER_BASIC_AUTH_HASH=$$2y$$12$$paste_bcrypt_hash_here
